<%= stylesheet_link_tag "bootstrap-theme.min", :media => "all" %>
<%= stylesheet_link_tag "bootstrap.min", :media => "all" %>

<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<% @posts.each do |post| %>
<h2><%= post.title %></h2>
<div>
  <p>
    <%= post.body %>
  </p>
  <p>
    <td><%= post.name %></td>
  </p>
  <div>
    <%= link_to '編集', edit_post_path(post) %> | <%= link_to '削除', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
<hr />
<% end %>

<%= render 'form' %>

<br>

<%= link_to 'New Post', new_post_path %>
